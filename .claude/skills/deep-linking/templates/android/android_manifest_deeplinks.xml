<!--
  Template: Android App Links Intent Filters

  Location: android/app/src/main/AndroidManifest.xml

  Usage:
  1. Add these intent-filters inside the <activity> tag for MainActivity
  2. Replace YOUR_DOMAIN with your actual domain
  3. Update pathPrefix values to match your deep link paths

  Note: android:autoVerify="true" enables App Links (no chooser dialog)
-->

<!-- Add these intent-filters to MainActivity in AndroidManifest.xml -->

<!-- App Links: HTTPS deep links (verified, no chooser) -->
<intent-filter android:autoVerify="true">
    <action android:name="android.intent.action.VIEW"/>
    <category android:name="android.intent.category.DEFAULT"/>
    <category android:name="android.intent.category.BROWSABLE"/>

    <!-- Production domain with specific paths -->
    <data
        android:scheme="https"
        android:host="YOUR_DOMAIN.com"
        android:pathPrefix="/products"/>
    <data
        android:scheme="https"
        android:host="YOUR_DOMAIN.com"
        android:pathPrefix="/users"/>
    <data
        android:scheme="https"
        android:host="YOUR_DOMAIN.com"
        android:pathPrefix="/orders"/>
</intent-filter>

